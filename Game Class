    public ArrayList<Card> getDeck()
    {
    	return deck;
    }
    
    // randomly puts the deck in a new order so that the array is no longer in clumps based on suit type. Now, the locations are mixed and the deck has been randomized.
    
    public void shuffle()
    {
    	
    	for(int i = 0; i < deck.size(); i++)
    	{
    		int index = (int)(Math.random() * deck.size());
    		Card temp = deck.get(i);
    		deck.set(i, deck.get(index));
    		deck.set(index, temp);
    	}
    }
        // distributes 13 random cards to each of the 4 players.
    public void deal(Player p1, Player p2, Player p3, Player p4)
    {
    	for(int i = 0; i < deck.size() - 3; i += 4)
    	{
    		p1.addHand(deck.get(i));
    		p2.addHand(deck.get(i+1));
    		p3.addHand(deck.get(i+2));
    		p4.addHand(deck.get(i+3));
    	}
    }
    
	
    
   // allows a player to complete the remaining cards of a value. If a player has 3 2's and one has been played, the complete method will check for any variation that adds to 4 and allow the player to move or to not.
	public boolean canComplete(List<Card> hand)
	{
		int countPile = 0;
		
		int countPlayerHand = 0;
		
		int total = 0;
		
		Card currentCard = pile.get(pile.size()-1);
		for(int i = pile.size()-1; i > pile.size() - 4; i--)
		{
			if(currentCard == pile.get(i-1))
			{
				countPile += 1;
			}
		}
		if (countPile!= 0) 
		{
			for( int i = 0; i < hand.size(); i++)
			{
				if(hand.get(i).equals(currentCard))
				{
					countPlayerHand +=1;
				}
			}
			total = countPlayerHand + countPile;
			
			if(total != 4)
			{
				return false;
			}
			else
			{
			    pile.clear();
			}
			
			return true;
		}
		return false;
	}
	
	 // checks if player's move is valid in the case that he/she tries playing singles instead of doubles or when it's not their turn, or etc.
    public void makeMove(List<Card> move)
    {
        if(move.get(0).compareTo(pile.get(2))>=0)
        {
            for(Card card: move)
            {
                pile.add(card);
            }
        
            if(move.get(move.size()-1).getValue()==15)
                pile.clear();
            
            while(pile.size()>3)
            {
                    pile.remove(0);
            }
            currentPlayer++;
        }
        
    }
    // if 2 cards of the same value are consecutively played, the next player is skipped. Ex: If player 1 plays a 2 and player 2 plays a 2, then player 3 is skipped.
    public void skip()
    {
    	Card currentCard = pile.get(pile.size()-2);
    	Card nextCard = pile.get(pile.size()-1);
    	
    	if(currentCard == nextCard)
    	{
    		currentPlayer += 2;
    		currentPlayer = currentPlayerLoop();
    	}
    }
     // when the increment passes 4, the currentPlayer must go back down to 1, so the cycle of moves can begin again.
    public int currentPlayerLoop()
    {
    	if(currentPlayer > 4)
    	{
    		if(currentPlayer % 4 == 0)
    		{
    			currentPlayer = 4;
    		}
    		else
    		{
    			currentPlayer = currentPlayer % 4;
    		}
    		
    	}
      // this is used to print out each card in the deck 
    public void print()
    {
    	String output = "";
    	for(int i = 0; i < deck.size(); i++)
    	{
    		 output += deck.get(i);
    	}
    	
    	System.out.print(output);
    }
    public void pass()
    {
    	currentPlayer ++;
    	currentPlayer = currentPlayerLoop();
    }
    
 
    	
}
