import java.io.PrintWriter;
import java.net.ServerSocket;
import java.net.Socket;
public class Server
{
   public static void main (String[] args) throws Exception
   {
       ServerSocket listener = new SocketServer(1234);
       System.out.println("Server is running");
       try
       {
           while(true)
           {
               Game game = new Game();
               Game.Player player1 = game.getPlayer1();
               Game.Player player2 = game.getPlayer2();
               Game.Player player3 = game.getPlayer3();
               Game.Player player4 = game.getPlayer4();
               player1.start();
               player2.start();
               player3.start();
               player4.start();
           }
       }
   }
