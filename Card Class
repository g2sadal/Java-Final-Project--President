

public class Card implements Comparable<Card>
{
    private int suit;
    private int number;
    
    //1 is diamonds
    //2 is clubs
    //3 is spades
    //4 is hearts

   
    public Card(int mySuit, int myValue)
    {
        suit = mySuit;
        value = myValue;
    }
    
    public int getSuit()
    {
        return suit;
    }
    
    public int getValue()
    {
        return Value;
    }
    
    public int compareTo(Card other)
    {
        if(getValue() > ((Card)other).getValue())
            return 1;
        else if( getValue() == ((Card)other).getValue())
            return 0;
        else 
            return -1;
    }
}

	
	

